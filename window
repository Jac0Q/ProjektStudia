    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        
        jTextArea1.setText("");
        ArrayList<String> userValues = new ArrayList<String>();
        
        userValues.add(jTextField1.getText());
        userValues.add(String.valueOf(jComboBox1.getSelectedItem())); 
        userValues.add(String.valueOf(jComboBox2.getSelectedItem())); 
        if (jCheckBox1.isSelected()) {
            userValues.add("Tak");
        } else {
            userValues.add("Nie");
        }
        if (jCheckBox2.isSelected()) {
            userValues.add("Tak");
        } else {
            userValues.add("Nie");
        }
        if (jCheckBox3.isSelected()) {
            userValues.add("Tak");
        } else {
            userValues.add("Nie");
        }
        userValues.add(String.valueOf(jComboBox3.getSelectedItem())); 
        userValues.add(String.valueOf(jComboBox4.getSelectedItem())); 
        userValues.add(String.valueOf(jComboBox5.getSelectedItem())); 
        
        ArrayList<String> calculations = calculate( userValues );
        
        for (int i = 0; i < calculations.size(); i++) {
            jTextArea1.append("\n");
            jTextArea1.append(calculations.get(i));
    }                                        
    }
    
